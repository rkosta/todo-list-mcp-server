# ===================================
# REQUIRED ENVIRONMENT VARIABLES
# ===================================

# Database Configuration
# Get your connection string from Neon (https://neon.tech)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require&channel_binding=require

# Kinde Authentication
# Get these from your Kinde dashboard (https://kinde.com)
KINDE_ISSUER_URL=https://your-domain.kinde.com
KINDE_CLIENT_ID=your_client_id
KINDE_CLIENT_SECRET=your_client_secret

# JWT Secret (generate a secure random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_key_here

# ===================================
# OPTIONAL ENVIRONMENT VARIABLES
# (Uncomment and modify as needed)
# ===================================

# Server Configuration
# PORT=3000
# NODE_ENV=development

# Authentication Server
# Override if running auth server on different host/port
# AUTH_SERVER_URL=http://localhost:3000

# Token Storage (relative to working directory)
# TOKEN_FILE_PATH=.auth-token

# JWKS Cache Duration (milliseconds)
# JWKS_CACHE_MAX_AGE=600000

# Billing Limits
# Maximum number of todos for free tier users
# FREE_TIER_TODO_LIMIT=5

# Session Configuration (milliseconds)
# SESSION_MAX_AGE=604800000

# JWT Algorithm
# JWT_ALGORITHM=RS256
